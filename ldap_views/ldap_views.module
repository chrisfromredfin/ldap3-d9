/**
 * Implements hook_views_data().
 */
function ldap_views_views_data() {
  $data['ldap_query_entity']['table']['group'] = t('LDAP Query');

  $data['ldap_query_entity']['table']['base'] = array(
    'field' => 'id',
    'title' => t('LDAP Query'),
    'help' => t('Data from LDAP Server.'),
  );

  return $data;
}


